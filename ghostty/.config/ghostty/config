# Fonts (Matches the Nerd Font you installed)
font-family = "JetBrainsMono Nerd Font"
font-size = 10

# --- Transparency & Blur ---

# Opacity level (0.0 to 1.0)
# 0.9 = Slight transparency (Recommended)
# 0.5 = Very transparent
# 1.0 = Solid (Default)
background-opacity = 0.85

# Blur strength (Frosted glass effect)
# Requires a compositor (KDE Plasma handles this natively on Wayland)
# Set to 0 to disable. 20-40 is a good "frosted" look.
background-blur-radius = 20

# Theme
theme = Catppuccin Mocha

# Transparency & Blur (The "Rice" Look)
# 0.9 = 90% opaque. Lower it if you want it more transparent.
background-opacity = 0.9
# This enables the "frosted glass" effect on KDE
background-blur-radius = 20

# hide mouse 
mouse-hide-while-typing = true

# Scrollback limit (lines)
scrollback-limit = 10000
