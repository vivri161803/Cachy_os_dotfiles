# Fonts (Matches the Nerd Font you installed)
font-family = "JetBrainsMono Nerd Font"
font-size = 13

# --- Transparency & Blur ---

# Opacity level (0.0 to 1.0)
# 0.9 = Slight transparency (Recommended)
# 0.5 = Very transparent
# 1.0 = Solid (Default)
background-opacity = 0.85

# Blur strength (Frosted glass effect)
# Requires a compositor (KDE Plasma handles this natively on Wayland)
# Set to 0 to disable. 20-40 is a good "frosted" look.
background-blur-radius = 20

# Theme
theme = Catppuccin Mocha

# --- Splits & Navigation ---
# Split the window (similar to Tmux/Vim)
# Ctrl+s then "v" for vertical split, "h" for horizontal
keybind = ctrl+s>v=new_split:right
keybind = ctrl+s>h=new_split:down

# Move between splits using Ctrl + Vim keys
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=goto_split:right

# Resize splits with Ctrl + Arrow keys
keybind = ctrl+up=resize_split:up,10
keybind = ctrl+down=resize_split:down,10
keybind = ctrl+left=resize_split:left,10
keybind = ctrl+right=resize_split:right,10

# Transparency & Blur (The "Rice" Look)
# 0.9 = 90% opaque. Lower it if you want it more transparent.
background-opacity = 0.9
# This enables the "frosted glass" effect on KDE
background-blur-radius = 20

# hide mouse 
mouse-hide-while-typing = true

# Scrollback limit (lines)
scrollback-limit = 10000
